@model IEnumerable<PatrimonyBank.Models.PessoaFisica>

<a asp-action="GerenciaInvestidor" asp-controller="Investidors" class="waves-effect waves-light btn blue accent-2" style="position:fixed;" title=""><i class="material-icons left">arrow_back</i></a>
<a asp-action="ListarAccountsPF" asp-controller="Accounts" class="waves-effect waves-light btn blue accent-2" style="position:fixed; right:10%;" title=""><i class="material-icons left">assignment_ind</i>Pessoa Fisica</a>
<a asp-action="ListarAccountsPJ" asp-controller="Accounts" class="waves-effect waves-light btn blue darken-4" style="position:fixed; right:10%; margin-top:3%;" title=""><i class="material-icons left">domain</i>Pessoa Juridica</a>
<div class="">
    <p class="tituloLeve fonteLeveM center bordaTxtTitulo">Listagem Pessoa Fisica</p>
    <p class="center">Aqui você encontra os registros persistidos em nossa base de dados</p><br>
</div>
<table class="striped centralizeDiv larguraG">
    <thead class="blue accent-2" style="color:white">
        <tr>
            <th class="center">
                @Html.DisplayNameFor(model => model.CPF)
            </th> 
            <th class="center">
                @Html.DisplayNameFor(model => model.CivilName)
            </th>
            <th class="center">
                @Html.DisplayNameFor(model => model.AdditionalInfo)
            </th>
            <th class="center">
                @Html.DisplayNameFor(model => model.CivilNameFiliation)
            </th> 
            <th class="center">
                PDF
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.CivilName)
                </td> 
                <td class="center">
                    @Html.DisplayFor(modelItem => item.AdditionalInfo)
                </td>
                <td class="center">
                    @Html.DisplayFor(modelItem => item.CivilNameFiliation)
                </td> 
                <td class="center">
                    <form class="" asp-action="PdfAccountsPF" asp-controller="Accounts">               
                        <input type="hidden" class="" name="cpf" value="@item.CPF"/>
                        <button class="btn deep-purple  deep-orange darken-2" type="submit" name="action">
                            <i class="material-icons">picture_as_pdf</i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
