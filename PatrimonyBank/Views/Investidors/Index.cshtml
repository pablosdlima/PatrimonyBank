@model IEnumerable<PatrimonyBank.Models.Investidor>

<a asp-action="GerenciaInvestidor" class="waves-effect waves-light btn blue accent-2" style="position:fixed;" title=""><i class="material-icons left">arrow_back</i></a>
<div class="">
    <p class="tituloLeve fonteLeveM center bordaTxtTitulo">Lista Investidores</p>
</div>
<table class="striped centralizeDiv larguraMG">
    <thead class="blue accent-2" style="color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisEmpresa)
            </th>
            <th>Ver</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisCidadania)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInvestidor">Edit</a> |
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdInvestidor">Details</a> 
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdInvestidor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
